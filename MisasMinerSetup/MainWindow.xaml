        <TextBlock x:Name="txttemp" HorizontalAlignment="Left" Margin="343,182,0,0" TextWrapping="Wrap" Text="MaxTemp" VerticalAlignment="Top" Foreground="White" FontSize="16" ToolTip="Maximum temperature"/>
        <TextBox x:Name="txbxtemp" HorizontalAlignment="Left" Height="23" Margin="428,191,0,0" TextWrapping="Wrap" Text="{Binding temp}" VerticalAlignment="Top" Width="67" FontSize="16" PreviewTextInput="NumberValidationTextBox" ToolTip="Maximum temperature."/>
        <Button x:Name="btnStart" Content="RIP GPU" Margin="379,247,30,30" Click="StartButton_Click" Background="#FFB2B2B2" BorderBrush="#FFA0A0A0" Foreground="Black" FontSize="24" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Misa's Miner Setup" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Foreground="#FFCBCBCB" Margin="10,0,0,0">
            <TextBlock.Effect>
                <DropShadowEffect/>
            </TextBlock.Effect>
        </TextBlock>

        <TextBlock x:Name="txtBal2" HorizontalAlignment="Left" Margin="381,0,0,0" TextWrapping="Wrap" Text="{Binding balance}" VerticalAlignment="Top" Height="18" Width="43" Foreground="White" ToolTip="I'm a dumb program and I crash if you're wallet is not recognised on the network. Wait and try again later if that happens"/>
