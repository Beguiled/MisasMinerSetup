        <TextBox x:Name="txbxWallet" HorizontalAlignment="Left" Height="24" Margin="108,94,0,0" TextWrapping="Wrap" Text="{Binding wallet}" VerticalAlignment="Top" Width="300" FontSize="14" ToolTip="Wallet address here."/>
