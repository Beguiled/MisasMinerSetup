<Window x:Class="MisasMinerSetup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Misa's Miner Setup" Height="350" Width="525" ResizeMode="CanMinimize" Visibility="Visible" BorderThickness="0,0,0,0" AllowsTransparency="True" SnapsToDevicePixels="False" Background="Black" WindowStyle="None">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF3A0404"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>

        </Grid.ColumnDefinitions>
        <Button Content="x" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Margin="507,0,0,0" VerticalAlignment="Top" BorderThickness="0" RenderTransformOrigin="0.5,0.5" Background="#FF898989" Click="CloseButton_Click" FontWeight="Bold" Width="18" Height="21" >
            <Button.Effect>
                <DropShadowEffect Opacity="0.5"/>
            </Button.Effect>
        </Button>
        <TextBox x:Name="txbxPool" HorizontalAlignment="Left" Height="22" Margin="315,63,0,0" TextWrapping="Wrap" Text="{Binding pool}" VerticalAlignment="Top" Width="200" FontSize="14" IsEnabled="False"/>
        <TextBox x:Name="txbxWallet" HorizontalAlignment="Left" Height="24" Margin="108,94,0,0" TextWrapping="Wrap" Text="{Binding wallet}" VerticalAlignment="Top" Width="300" FontSize="14"/>
        <TextBlock x:Name="txtPool" HorizontalAlignment="Left" Margin="10,58,0,0" TextWrapping="Wrap" Text="Pool:" VerticalAlignment="Top" Foreground="White" FontSize="20"/>
        <TextBlock x:Name="txtWallet" HorizontalAlignment="Left" Margin="10,91,0,0" TextWrapping="Wrap" Text="Wallet:" VerticalAlignment="Top" Foreground="White" FontSize="20"/>
        <TextBlock x:Name="txtIntensity" HorizontalAlignment="Left" Margin="10,123,0,0" TextWrapping="Wrap" Text="Intensity:" VerticalAlignment="Top" Foreground="White" FontSize="20"/>
        <Slider x:Name="sldrIntensity" HorizontalAlignment="Left" Margin="108,132,0,0" VerticalAlignment="Top" Width="300" Maximum="30" Value="{Binding i}" SmallChange="1" AutoToolTipPlacement="TopLeft"/>
        <TextBlock x:Name="txttemp" HorizontalAlignment="Left" Margin="354,191,0,0" TextWrapping="Wrap" Text="MaxTemp" VerticalAlignment="Top" Foreground="White" FontSize="16"/>
        <TextBox x:Name="txbxtemp" HorizontalAlignment="Left" Height="23" Margin="428,191,0,0" TextWrapping="Wrap" Text="{Binding temp}" VerticalAlignment="Top" Width="67" FontSize="16" PreviewTextInput="NumberValidationTextBox"/>
        <Button x:Name="btnStart" Content="RIP GPU" Margin="379,247,30,30" Click="StartButton_Click" Background="#FFB2B2B2" BorderBrush="#FFA0A0A0" Foreground="Black" FontSize="24" FontWeight="Bold" IsEnabled="True"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Misa's Miner Setup" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Foreground="#FFCBCBCB" Margin="10,0,0,0">
            <TextBlock.Effect>
                <DropShadowEffect/>
            </TextBlock.Effect>
        </TextBlock>
        <ComboBox x:Name="ComboBox1" HorizontalAlignment="Left" Margin="108,63,0,0" VerticalAlignment="Top" Width="170" SelectedValue="{Binding selectedPool}" SelectedValuePath="Content">
            <ComboBoxItem>pool.grlc-bakery.fun:3333</ComboBoxItem>
            <ComboBoxItem>us.pool.garlicsoup.xyz:3333</ComboBoxItem>
            <ComboBoxItem>stratum.garlicpool.org:3333</ComboBoxItem>
            <ComboBoxItem>happy.garlicoin.fun:3210</ComboBoxItem>
            <ComboBoxItem>garlicbois.com:3333</ComboBoxItem>
            <ComboBoxItem>Custom</ComboBoxItem>
        </ComboBox>
        <ComboBox x:Name="comboGap" HorizontalAlignment="Left" Margin="469,162,0,0" VerticalAlignment="Top" Width="39" SelectedValue="{Binding selectedgap}" RenderTransformOrigin="0.462,0.727" SelectedValuePath="Content" ToolTip="1-Good for older gpu (700 series and lower) 2-Good for newer gpu (900 and 1000 up to 1070Ti) 3-Good for 1080 and 1080Ti">
            <ComboBoxItem>1</ComboBoxItem>
            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>3</ComboBoxItem>
        </ComboBox>
        <TextBlock x:Name="txtLook" HorizontalAlignment="Left" Margin="354,161,0,0" TextWrapping="Wrap" Text="--lookup-gap=" VerticalAlignment="Top" Foreground="White" FontSize="16" ToolTip="1-Good for older gpu (700 series and lower) 2-Good for newer gpu (900 and 1000 up to 1070Ti) 3-Good for 1080 and 1080Ti"/>
        <TextBlock x:Name="txtnFactor" HorizontalAlignment="Left" Margin="10,155,0,0" TextWrapping="Wrap" Text="nFactor:" VerticalAlignment="Top" Foreground="White" FontSize="20"/>
        <TextBox x:Name="txtn" HorizontalAlignment="Left" Height="23" Margin="108,159,0,0" TextWrapping="Wrap" Text="{Binding n}" VerticalAlignment="Top" Width="55" FontSize="16" PreviewTextInput="NumberValidationTextBox"/>
        <TextBlock x:Name="txtTouch" HorizontalAlignment="Left" Margin="168,161,0,0" TextWrapping="Wrap" Text="Don't touch if unsure." VerticalAlignment="Top" Foreground="White" FontSize="16"/>
        <TextBlock x:Name="inCalc" HorizontalAlignment="Left" Margin="424,128,0,0" TextWrapping="Wrap" Text="{Binding i}" VerticalAlignment="Top" Foreground="White" FontSize="20" Width="45"/>
        <TextBlock HorizontalAlignment="Left" Margin="0,331,0,0" TextWrapping="Wrap" Text="Currently only for Garlicoin" VerticalAlignment="Top" FontSize="14" Foreground="White"/>
        <TextBlock x:Name="txtFileCheck" HorizontalAlignment="Left" Margin="10,257,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Foreground="White" FontSize="20"/>
        <Button x:Name="btnInstall" Content="Install Miner" Click="btnDownload_Click" HorizontalAlignment="Left" Margin="10,284,0,0" VerticalAlignment="Top" Width="124" Height="36" FontSize="20" Background="#FFB2B2B2" Visibility="{Binding visi}"/>
        <TextBlock x:Name="txtninstall" HorizontalAlignment="Left" Margin="10,247,0,0" TextWrapping="Wrap" Text="Miner not found. Am I in the right folder?" VerticalAlignment="Top" Foreground="White" FontSize="14" Visibility="{Binding visi}"/>
        <TextBlock x:Name="txtninstall2" HorizontalAlignment="Left" Margin="10,266,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="14" Visibility="{Binding visi}"><Run Text="You can also let me install the miner."/></TextBlock>
        <TextBlock x:Name="txtBuy" HorizontalAlignment="Left" Margin="300,318,0,-6" TextWrapping="Wrap" Text="If you want to buy me some garlicbread, here are my addresses:" VerticalAlignment="Top" Foreground="White" Width="215" Height="38" LineHeight="1" TextDecorations="{x:Null}"/>
        <TextBlock x:Name="txtl" HorizontalAlignment="Left" Margin="10,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="20" Width="70" Text="-L:"/>
        <TextBox x:Name="txtlbox" HorizontalAlignment="Left" Height="23" Margin="45,186,0,0" TextWrapping="Wrap" Text="{Binding l}" VerticalAlignment="Top" Width="55" FontSize="16"/>
        <Button x:Name="btnDonate"  Content="Thank you" Click="btnDonate_Click" HorizontalAlignment="Left" Margin="428,335,0,0" VerticalAlignment="Top" Width="80" Height="15" Background="#FFC5C5C5" FontWeight="Bold" FontSize="9"/>
        <TextBox x:Name="txtDonatos" HorizontalAlignment="Left" Height="195" Margin="63,118,0,0" TextWrapping="Wrap"  Text="BTC:  3DipZ4uwG4ZXEeYfik6JDMv6zgzw4vTwuJ&#xD;&#xA;Dash: XpqXZWWPqSj5WfuVJE3aiVSnAbcZLYd6CP&#xD;&#xA;GRLC: Gd7zf4ZsAZtcYNWmALJVMCpsj9MS5MJi2x&#xD;&#xA;XMR: 45XumvbTqLfVhhG63AAFHBYgbcSrPak3zAfJjFVnFrbeakkJmtSKTUF2fqnu7ia9tp5PGRUw4hKVwaEwpczvXu6H1CDw52H&#xD;&#xA;ETH: 0xa7c4cAC051e5c50DA870AE6385C0b5A94414B9e4           &#xD;&#xA;&#xD;&#xA;" VerticalAlignment="Top" Width="406" FontSize="14" Background="LightGray" FontWeight="Bold" Visibility="Hidden" />
        <Button x:Name="btnsetx" Content="SETX" Click="btnsetx_Click" HorizontalAlignment="Left" Margin="424,94,0,0" VerticalAlignment="Top" Width="81" Height="24" Background="#FFB2B2B2" Visibility="{Binding visi}" FontWeight="Bold" FontSize="16"/>
        <Button x:Name="btnCloseDonate"  Content="Close" Click="btnCloseDonate_Click"  HorizontalAlignment="Left" Margin="215,266,0,0" VerticalAlignment="Top" Width="80" Height="39" Background="#FFC5C5C5" FontWeight="Bold" FontSize="16" Visibility="Hidden"/>

        <TextBlock x:Name="txtwait" HorizontalAlignment="Left" Margin="139,294,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="14" Visibility="Hidden"><Run Text="Downloading..."/></TextBlock>
        <TextBlock x:Name="txtChoose" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Background="#FFD1D1D1" Foreground="Black" Height="350" Width="525" TextAlignment="Center" FontSize="36"><Run/><LineBreak/><Run Text="Which GPU do you have?"/></TextBlock>
        <Button x:Name="btnNvidia"  Content="NVIDIA" Click="btnNvidia_Click" Margin="86,223,270,0" VerticalAlignment="Top" Height="82" Background="#FFC5C5C5" FontSize="36" FontWeight="Bold"/>
        <Button x:Name="btnAMD"  Content="AMD" Click="btnAMD_Click"  HorizontalAlignment="Left" Margin="270,223,0,0" VerticalAlignment="Top" Width="169" Height="82" Background="#FFC5C5C5" FontWeight="Bold" FontSize="36"/>
        <TextBlock x:Name="txtsetx" HorizontalAlignment="Left" Margin="126,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Background="#FFEAEAEA" Height="189" Width="313" LineHeight="22" Visibility="Hidden"><Run FontWeight="Bold" FontSize="14"/><LineBreak/><Run FontWeight="Bold" FontSize="14" Text="GPU_MAX_HEAP_SIZE"/><LineBreak/><Run FontWeight="Bold" FontSize="14" Text="GPU_MAX_SINGLE_ALLOC_PERCENT"/><LineBreak/><Run FontWeight="Bold" FontSize="14" Text="GPU_MAX_ALLOC_PERCENT"/><LineBreak/><Run FontWeight="Bold" FontSize="14" Text="GPU_USE_SYNC_OBJECTS"/></TextBlock>
        <TextBox x:Name="txtsetx2" HorizontalAlignment="Left" Height="22" Margin="369,94,0,0" TextWrapping="Wrap" Text="{Binding setx2}" VerticalAlignment="Top" Width="55" FontSize="16" PreviewTextInput="NumberValidationTextBox" Visibility="Hidden"/>
        <TextBox x:Name="txtsetx3" HorizontalAlignment="Left" Height="22" Margin="369,114,0,0" TextWrapping="Wrap" Text="{Binding setx3}" VerticalAlignment="Top" Width="55" FontSize="16" PreviewTextInput="NumberValidationTextBox" Visibility="Hidden"/>
        <TextBox x:Name="txtsetx4" HorizontalAlignment="Left" Height="22" Margin="369,134,0,0" TextWrapping="Wrap" Text="{Binding setx4}" VerticalAlignment="Top" Width="55" FontSize="16" PreviewTextInput="NumberValidationTextBox" Visibility="Hidden"/>
        <TextBox x:Name="txtsetx5" HorizontalAlignment="Left" Height="22" Margin="369,155,0,0" TextWrapping="Wrap" Text="{Binding setx5}" VerticalAlignment="Top" Width="55" FontSize="16" PreviewTextInput="NumberValidationTextBox" Visibility="Hidden"/>
        <Button x:Name="btnsetxSave" Content="Save" Click="btnsetxSave_Click" HorizontalAlignment="Left" Margin="239,223,0,0" VerticalAlignment="Top" Width="81" Height="24" Background="#FFB2B2B2" Visibility="Hidden" FontWeight="Bold" FontSize="16"/>




    </Grid>
</Window>
