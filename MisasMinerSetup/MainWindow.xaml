        <Button x:Name="btnDonate"  Content="Thank you" Click="btnDonate_Click" HorizontalAlignment="Left" Margin="428,335,0,0" VerticalAlignment="Top" Width="80" Height="15" Background="#FFC5C5C5" FontWeight="Bold" FontSize="9"/>
