        <Button x:Name="btnNvidia"  Content="NVIDIA" Click="btnNvidia_Click" Margin="86,223,270,0" VerticalAlignment="Top" Height="82" Background="#FFC5C5C5" FontSize="36" FontWeight="Bold"/>
